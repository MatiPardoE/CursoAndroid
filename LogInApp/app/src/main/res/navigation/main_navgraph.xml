<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navgraph"
    app:startDestination="@id/logInFragment">

    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.loginapp.fragments.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logInFragment_to_coffeeRecipeFragment"
            app:destination="@id/coffeeRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/coffeeRecipeFragment"
        android:name="com.example.loginapp.fragments.CoffeeRecipeFragment"
        android:label="fragment_list_coffee_recipe"
        tools:layout="@layout/fragment_list_coffee_recipe" >
        <action
            android:id="@+id/action_coffeeRecipeFragment_to_coffeeRecipeDetailFragment"
            app:destination="@id/coffeeRecipeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/coffeeRecipeDetailFragment"
        android:name="com.example.loginapp.fragments.CoffeeRecipeDetailFragment"
        android:label="fragment_coffee_recipe_detail"
        tools:layout="@layout/fragment_coffee_recipe_detail" >
        <argument
            android:name="coffeeRecipe"
            app:argType="com.example.loginapp.entities.CoffeeRecipe" />
    </fragment>
</navigation>