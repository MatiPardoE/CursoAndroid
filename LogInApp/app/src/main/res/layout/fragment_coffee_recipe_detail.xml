<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineAmbientShadowColor="#00BCD4"
    android:outlineSpotShadowColor="#4CAF50"
    tools:context=".fragments.CoffeeRecipeDetailFragment">

    <TextView
        android:id="@+id/txtNameCoffeeRecipe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDescriptionCoffeeRecipe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNameCoffeeRecipe" />

    <TextView
        android:id="@+id/textCoffeeType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="CoffeType"
        app:layout_constraintEnd_toStartOf="@id/textGrindLevel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDescriptionCoffeeRecipe" />

    <TextView
        android:id="@+id/textGrindLevel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GrindLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textCoffeeType"
        app:layout_constraintTop_toBottomOf="@+id/textDescriptionCoffeeRecipe" />

    <SeekBar
        android:id="@+id/seekBarStrength"
        style="@android:style/Widget.Material.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:max="4"
        android:progress="3"
        android:progressBackgroundTint="#F44336"
        android:thumb="@drawable/granocolorchico"
        app:layout_constraintBottom_toBottomOf="@+id/textStrength"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textStrength"
        app:layout_constraintTop_toTopOf="@+id/textStrength" />

    <TextView
        android:id="@+id/textStrength"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Strength:"
        app:layout_constraintEnd_toStartOf="@id/seekBarStrength"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCoffeeType" />

    <TextView
        android:id="@+id/textRatioTitle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Ratio:"
        app:layout_constraintEnd_toStartOf="@+id/seekBarStrength"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textStrength" />

    <TextView
        android:id="@+id/textRatio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ratio"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textRatioTitle"
        app:layout_constraintTop_toBottomOf="@+id/seekBarStrength" />

    <ListView
        android:id="@+id/listWater_Time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRatio" />
</androidx.constraintlayout.widget.ConstraintLayout>